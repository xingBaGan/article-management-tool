{
  "name": "article-management-tool",
  "private": true,
  "version": "0.0.1",
  "description": "一个将本地markdown文件发布到各个平台的工具",
  "author": "jacob jiang",
  "main": "out/electron/main/index.js",
  "scripts": {
    "clean": "rimraf out/ dist/",
    "dev": "npm run build && electron-vite dev --watch",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p electron/tsconfig.json && tsc-alias -p electron/tsconfig.json",
    "build:preload": "tsc -p electron/tsconfig.json && tsc-alias -p electron/tsconfig.json",
    "build:renderer": "vite build",
    "build:win": "pnpm run build && pnpm electron-vite build && pnpm exec electron-builder --win",
    "build:mac": "pnpm run build && pnpm electron-vite build && pnpm exec electron-builder --mac",
    "build:linux": "pnpm run build && pnpm electron-vite build && pnpm exec electron-builder --linux",
    "lint": "eslint .",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "build:contentlayer": "contentlayer2 build",
    "install:playwright": "npx playwright install --with-deps chromium"
  },
  "dependencies": {
    "@mdx-js/esbuild": "^3.1.0",
    "astring": "^1.9.0",
    "clsx": "^2.1.0",
    "contentlayer2": "latest",
    "dequal": "^2.0.3",
    "devlop": "^1.1.0",
    "estree-util-build-jsx": "^3.0.1",
    "estree-util-is-identifier-name": "^3.0.0",
    "estree-util-to-js": "^2.0.0",
    "estree-walker": "^3.0.3",
    "hast-util-to-estree": "^3.1.2",
    "i18next": "^24.2.2",
    "lucide-react": "^0.344.0",
    "next-contentlayer": "^0.3.4",
    "playwright": "^1.50.1",
    "pliny": "0.1.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "react-i18next": "^15.4.1",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-citation": "^2.0.0",
    "rehype-katex": "^7.0.0",
    "rehype-preset-minify": "^7.0.0",
    "rehype-prism-plus": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark-emoji": "^4.0.1",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-mermaidjs": "^6.0.0",
    "source-map": "^0.7.4"
  },
  "devDependencies": {
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/plugin-fuses": "^7.2.0",
    "@electron-forge/plugin-vite": "^7.2.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint/js": "^9.9.1",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@types/estree": "^1.0.6",
    "@types/estree-jsx": "^1.0.0",
    "@types/mdx": "^2.0.5",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.0.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.4.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    },
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller",
      "esbuild"
    ]
  },
  "resolutions": {
    "@types/estree": "^1.0.0",
    "@types/estree-jsx": "^1.0.0",
    "@mdx-js/mdx": "^2.0.0"
  }
}
